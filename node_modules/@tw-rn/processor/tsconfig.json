{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src", "./types"],
  "exclude": ["node_modules"]
}
